{
  "name": "PROtect",
  "version": "1.0",
  "description": "Your go-to toxicity remover!",
  "permissions": [
    "storage",
    "declarativeContent",
    "webNavigation",
    "activeTab",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/twitter_16.png",
      "32": "images/twitter_32.png",
      "128": "images/twitter_128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://twitter.com/*",
        "*://mobile.twitter.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "images/twitter_16.png",
    "32": "images/twitter_32.png",
    "128": "images/twitter_128.png"
  },
  "manifest_version": 2
}
